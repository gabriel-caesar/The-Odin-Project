<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
  </head>
  <body class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="mt3"><%= title %></h1>
    <form
      class="mt-5 card bg-secondary p-4 shadow d-flex flex-row align-items-center"
      action="/search"
      method="GET"
    >
      <div class="input-group">
        <input
          type="text"
          name="query"
          id="search-input"
          class="form-control"
          placeholder="Nikola..."
        />
        <button
          type="submit"
          class="btn btn-outline-secondary btn-primary text-dark"
        >
          Search
        </button>
      </div>

      <div
        id="search-by-container"
        class="d-flex align-items-center justify-content-center w-50 position-relative"
        style="margin-left: 2rem"
      >
        <label for="search-by-dropdown" class='text-light position-absolute' style='top: -23px; left: 0px'>Search by</label>
        <select name="searchBy" id="search-by-dropdown" class="form-select">
          <option selected value="firstname">First name</option>
          <option value="lastname">Last name</option>
          <option value="email">Email</option>
        </select>
      </div>
    </form>
    <% if (locals.search) { %>
    <div id="user-query-container" class="my-3">
      <p>
        Showing 
        <span class="fst-italic text-danger"><%= locals.searchBy %></span>
        results for
        <span class="fst-italic text-danger"><%= locals.search %></span>
      </p>
    </div>
    <% } %>
    <div id="searched-users" style="max-width: 420px; width: 100%">
      <% if (locals.users && locals.users.length > 0) { %>
      <ul
        style="width: 100%; max-height: 500px"
        class="list-group overflow-auto bg-secondary text-light p-4 shadow d-flex flex-column justify-content-start align-items-center"
      >
        <% users.forEach(user => { %>
        <li class="list-group-item w-100">
          <div id="name-and-id-container">
            <span class="btn btn-secondary">ID: <%= user.id %></span>
            <p class="text-decoration-underline d-inline">
              <%= user.firstname %> <%= user.lastname %>
            </p>
          </div>
          <p class="m-0 mt-3">
            Email: <%= user.email ? user.email : 'Not provided' %>
          </p>
          <p class="m-0 mt-1">
            Age: <%= user.age ? user.age : 'Not provided' %>
          </p>
          <p class="m-0 mt-1 mb-3">
            Bio: <%= user.bio ? user.bio : 'Not provided' %>
          </p>
          <div id="buttons-container" class="mt-2">
            <a href="/update/<%= user.id %>" class="btn btn-primary">Update</a>
            <form
              style="display: inline"
              action="/delete/<%= user.id %>"
              method="POST"
            >
              <button
                class="btn btn-danger"
                type="submit"
                onclick='return confirm("Are you sure you want to delete this user?")'
              >
                Delete
              </button>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
      <% } else if (locals.users && locals.users <= 0) { %>
      <h2 style="color: #c9c9c9; font-style: italic; text-align: center">
        No user found...
      </h2>
      <% } %>
    </div>
    <a href="/" class="btn btn-dark mt-3 mb-5">Back to home</a>
  </body>
</html>
