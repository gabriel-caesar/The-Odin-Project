<!-- views/createUser.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
  </head>
  <body class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="mt-3"><%= title %></h1>
    <%- include('partials/errors.ejs') %>
    <form
      action="/create"
      method="POST"
      class="card p-4 bg-secondary shadow d-flex justify-content-center align-items-center"
    >
      <div class="mt-3 input-group">
        <label for="firstName" class="input-group-text">First Name: </label>
        <input
          class="form-control"
          type="text"
          name="firstName"
          id="firstName"
          autofocus
          required
        />
      </div>

      <div class="mt-3 input-group">
        <label class="input-group-text" for="lastName">Last Name: </label>
        <input
          class="form-control"
          type="text"
          name="lastName"
          id="lastName"
          required
        />
      </div>

      <div class="mt-3 input-group">
        <label class="input-group-text" for="email">Email: </label>
        <input class="form-control" type="text" name="email" id="email" />
      </div>

      <div class="mt-3 input-group">
        <label class="input-group-text" for="age">Age: </label>
        <input class="form-control" type="text" name="age" id="age" />
      </div>

      <div class="mt-3 input-group">
        <label class="input-group-text" for="bio">Bio:</label>
        <textarea class="form-control" name="bio" id="bio"></textarea>
      </div>

      <button class="btn btn-primary mt-3" type="submit">Create</button>
    </form>
    <a href="/" class="btn btn-dark mt-2">Back to home</a>
  </body>
</html>
