<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
  </head>
  <body class="d-flex justify-content-center align-items-center">
    <form 
      method='POST' 
      action='/new/delete/<%= message.id %>'
      class="card shadow-lg bg-dark text-white d-flex justify-content-center align-items-center"
    >
    <h1 class='card-header' id='message-header'>
      Message details
    </h1>

    <div id='message-details-container' class='card-body bg-secondary rounded-2 shadow-lg my-4' style='max-width:300px'>
      <p class='card-text'>User: <%= message.user %></p>
      <p class='card-text' style='max-height: 200px; overflow-y: auto;'>Content: <%= message.text %></p>
      <p class='card-text'>Sent on: <%= message.added.toLocaleString() %></p>
    </div>

    <div id='buttons-container' class='d-flex flex-column my-2 w-100 p-2'>
      <button
        type='submit'
        id='delete-message-button'
        aria-label='delete-message-button'
        class='btn btn-danger text-light w-100'
      >
        Delete
      </button>
      <a 
        id="back-button"
        href='/'
        type="button"
        class="mt-2 btn btn-light text-dark w-100"
        style="transition: all 0.2s"
      >
        Back
      </a>
    </div>
  </form>
  </body>
</html>