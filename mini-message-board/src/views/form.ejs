<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
  </head>

  <body class="d-flex flex-column justify-content-center align-items-center pt-5">
    <%- include('./partials/errors.ejs') %>
    <form
      method="POST"
      action="/new"
      class="shadow-lg rounded-2 p-2 bg-dark text-white d-flex flex-column justify-content-start align-items-center"
    >
      <h1>Create new message</h1>
      <div
        class="d-flex flex-column justify-content-center align-items-center my-3 w-100"
      >
        <div class="input-group mb-3">
          <span class="input-group-text bg-secondary text-white"> Name </span>
          <input
            type="text"
            placeholder="John..."
            class="form-control"
            id="author-name-input"
            aria-label="author-name-input"
            style="transition: all 0.2s"
            name="authorName"
          />
        </div>
        <div class="input-group">
          <span class="input-group-text bg-secondary text-white">
            Message
          </span>
          <input
            type="text"
            placeholder="Hello world..."
            class="form-control"
            id="message-input"
            aria-label="message-input"
            style="transition: all 0.2s"
            name="message"
          />
        </div>
      </div>
      <button
        type="submit"
        class="mt-2 btn btn-primary w-100"
        style="transition: all 0.2s"
      >
        Submit
      </button>
      <a
        id="back-button"
        href='/'
        type="button"
        class="mt-2 btn btn-light text-dark w-100"
        style="transition: all 0.2s"
      >
        Back
      </a>
    </form>
  </body>
</html>
