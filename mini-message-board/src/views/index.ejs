<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='styles.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  </head>
  <body style='padding: 2rem' class='position-relative'>
    <% messages.forEach(message => { %>
      <div class='card text-bg-dark mb-3' style='max-width: 18rem'>
        <div class='card-body'>
          <h5 class='card-title'>
            <%= message.username %>
          </h5>
          <p class='card-text' style='max-height: 200px; overflow-y: auto;'>
            <%= message.content %>
          </p>
          <p class='card-text text-info'>
            <%= message.added ? `Sent on ${message.added.toLocaleString()}` : 'Not provided'  %>
          </p>
          <a href='/new/<%= message.id %>' class='btn btn-primary w-100'>Open</a>
        </div>
      </div>
    <% }) %>
    <div style='position: absolute; top: 3; right: 10'>
      <a
        id="new-message-button"
        href='/new'
        type="button"
        class="mt-2 btn btn-primary shadow-lg text-light w-100"
        style="transition: all 0.2s"
      >
        New Message
      </a>
    </div>
  </body>
</html>